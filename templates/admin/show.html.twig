{% extends 'index.html.twig' %}

{% block title %}Admin - utilisateur{% endblock %}

{% block main_content %}
    <h1>Utilisateur {{ user.getName }}</h1>

    <div class="max-w-2xl mx-auto mt-8 mb-5">
        <table class="min-w-full bg-white shadow-lg rounded-lg">
            <tbody class="divide-y divide-gray-200">
                <tr class="bg-gray-50">
                    <th class="px-6 py-3 text-left text-sm font-medium text-gray-700 uppercase tracking-wider">
                        Id
                    </th>
                    <th class="px-6 py-3 text-left text-sm font-medium text-gray-700 uppercase tracking-wider">
                        Nom
                    </th>
                    <th class="px-6 py-3 text-left text-sm font-medium text-gray-700 uppercase tracking-wider">
                        Email
                    </th>
                    <th class="px-6 py-3 text-left text-sm font-medium text-gray-700 uppercase tracking-wider">
                        Role
                    </th>
                </tr>
                <tr>
                    <td class="px-6 py-3 text-sm text-gray-900">
                        {{ user.id }}
                    </td>
                    <td class="px-6 py-3 text-sm text-gray-900">
                        {{ user.getName }}
                    </td>
                    <td class="px-6 py-3 text-sm text-gray-900">
                        {{ user.email }}
                    </td>
                    <td class="px-6 py-3 text-sm text-gray-900">
                        {% for role in user.getRoles %}
                            <span>{{ role ~ '  ' }}</span>
                        {% endfor %}
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    

    <div class="flex items-center gap-4 mb-5">
        <a href="{{ path('app_admin') }}" class="inline-block px-4 py-2 bg-blue-500 rounded text-white">Retour vers la liste des utilisateurs</a>

        <a href="{{ path('app_admin_edit', {'id': user.id}) }}" class="inline-block px-4 py-2 bg-green-500 rounded text-white">Modifier</a>
    </div>
    

    {{ include('admin/_delete_form.html.twig') }}
{% endblock %}
