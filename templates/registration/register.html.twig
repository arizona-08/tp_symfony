{% extends 'index.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block main_content %}
    <h1 class="text-3xl font-bold mb-8">Inscription</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm, { attr: { class: "space-y-6" } }) }}
    <div class="mb-4">
        <div class="mb-6">
            {{ form_label(registrationForm.name, null, { label_attr: { class: "block text-sm font-medium text-gray-700" } }) }}
            {{ form_widget(registrationForm.name, { attr: { class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } }) }}
            {{ form_errors(registrationForm.name, { attr: { class: "text-red-500 text-sm mt-1" } }) }}
        </div>

        <div class="mb-6">
            {{ form_label(registrationForm.email, null, { label_attr: { class: "block text-sm font-medium text-gray-700" } }) }}
            {{ form_widget(registrationForm.email, { attr: { class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } }) }}
            {{ form_errors(registrationForm.email, { attr: { class: "text-red-500 text-sm mt-1" } }) }}
        </div>

        <div class="mb-6">
            {{ form_label(registrationForm.plainPassword, 'Password', { label_attr: { class: "block text-sm font-medium text-gray-700" } }) }}
            {{ form_widget(registrationForm.plainPassword, { attr: { class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } }) }}
            {{ form_errors(registrationForm.plainPassword, { attr: { class: "text-red-500 text-sm mt-1" } }) }}
        </div>
    </div>

    <button type="submit" class="w-full bg-blue-600 text-white py-2 px-4 rounded-md shadow hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
        M'inscrire
    </button>

    <p>J'ai déjà un compte? <a href=" {{ path('app_login') }} " class="text-blue-600">Me connecter</a></p>
{{ form_end(registrationForm) }}
{% endblock %}
