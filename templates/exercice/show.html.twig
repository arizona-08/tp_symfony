{% extends 'index.html.twig' %}

{% block title %}Exercice{% endblock %}

{% block main_content %}
    <h1>Exercice</h1>

    <div class="max-w-2xl mx-auto mt-8 mb-5">
        <table class="min-w-full bg-white shadow-lg rounded-lg">
            <tbody class="divide-y divide-gray-200">
                <tr class="bg-gray-50">
                    <th class="px-6 py-3 text-left text-sm font-medium text-gray-700 uppercase tracking-wider">
                        Id
                    </th>
                    <th class="px-6 py-3 text-left text-sm font-medium text-gray-700 uppercase tracking-wider">
                        Label
                    </th>
                    
                </tr>
                <tr>
                    <td class="px-6 py-3 text-sm text-gray-900">
                        {{ exercice.id }}
                    </td>
                    <td class="px-6 py-3 text-sm text-gray-900">
                        {{ exercice.label }}
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="flex items-center gap-4 mb-5">
        <a href="{{ path('app_exercice_index') }}" class="inline-block px-4 py-2 bg-blue-500 rounded text-white">Retour vers la liste des exercices</a>

        <a href="{{ path('app_exercice_edit', {'id': exercice.id}) }}" class="inline-block px-4 py-2 bg-green-500 rounded text-white">Modifier</a>
    </div>

    {{ include('exercice/_delete_form.html.twig') }}
{% endblock %}
